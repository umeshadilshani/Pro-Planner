<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D7F1"
    tools:context=".activities.CreatePlan">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/layoutbg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/plan_create"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="560dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="10dp"
                tools:ignore="ExtraText">


                <Button

                    android:id="@+id/saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="490dp"
                    android:background="@drawable/savebtn"
                    android:text="@string/save"
                    android:textColor="#E3F2FD"
                    app:cornerRadius="20dp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/projectName"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:autofillHints="enter name"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:ems="20"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:background="@drawable/custom_edittext"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="@string/pj_description"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/projectDescription"
                    android:layout_width="359dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edittext"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:inputType=""
                    android:minHeight="48dp"
                    android:padding="8dp"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:text="@string/period"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/timePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:autofillHints=""
                    android:padding="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck"
                    android:background="@drawable/custom_edittext"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="245dp"
                    android:text="@string/Stasks"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/task"
                    android:layout_width="352dp"
                    android:layout_height="124dp"
                    android:layout_marginTop="275dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_edittext"
                    android:drawablePadding="8dp"
                    android:hint="@string/add_task"
                    android:padding="8dp"
                    android:textColor="@color/heading2"
                    android:textSize="20sp"
                    tools:ignore="TextFields,TextContrastCheck"
                    />
                />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>